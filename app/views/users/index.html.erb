<div class= "col-xs-3">
  <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h5>name</h5>
  <%= @user.name %>
  <h5>introduction</h5>
  <%= @user.introduction %>
  <%= link_to"",edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%>

  <%= form_for(@book, url: books_path) do |f| %>

  <h2>New book</h2>
  <h4>Title</h4>
<%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_field :body %>
  <nav>
<%= f.submit 'Create Book',class: "col-xs-12 btn btn-primary" %>
  </nav>
  <% end %>
  </div>

  <div class= "col-xs-9">
  <h2>Users</h2>
  <table class='table'>

  <% @users.each do |user| %>
  <tr>
  <th><%= image_tag user.get_profile_image(100,100) %></th>
  <th><%= user.name %><th>
  <th><%= link_to"Show",user_path(user.id) %></th>
  </tr>
  <% end %>
</table>
  </div>