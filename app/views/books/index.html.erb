<% if @book.errors %>
 <ul>
<% @book.errors.full_messages.each do |message| %>
 <li><%= message %></li>
  <% end %>
 </ul>
<% end %>

<div class= "col-xs-3">
<h2>User info</h2>
<thead>
  <tr>
    <%= image_tag @user.get_profile_image(100,100) %>
  </tr>
</thead>
<tbody>
  <tr>
    <th>Name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>Introduction</th>
    <th><%= @user.introduction %></th>
  </tr>
  <tr>
      <%= link_to edit_user_path(current_user), class:"btn btn-default btn-block" do %>
      <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
    <% end %>
    </th>
  </tr>
</tbody>

<%= form_for(@book, url: books_path) do |f| %>
 <h2>New book</h2>
 <h4>Title</h4>
 <%= f.text_field :title %>
 
 <h4>Opinion</h4>
 <%= f.text_field :body %>
 <nav>
   <%= f.submit 'Create Book'%>
 </nav>
 <% end %>
 
 <div class = "col-xs-9">
   <h2>Books</h2>
   <table class = 'table table-hover table-inverse'>
     
     <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
       <th cospan='3'></th>
     </tr>
     
     <% @books.each do |book| %>
     <tr>
       <td><%= link_to user_path(book.user_id) do %>
       <%= image_tag @user.get_profile_image(100,100) %></td>
       <% end %>
       
       <td><%=link_to book.title, book_path(book.id)%></td>
       <td><%=link_to book.body %></td>
     </tr>
     <% end %>
   </table>
   </div>
 </div>