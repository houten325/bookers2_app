<div class="box">

<div class= "containar px-5 px- sm-0">
 <div class="row">
  <div class="col-md-3">
<h2>User info</h2>
<thead>
  <tr>
    <%= image_tag @user.get_profile_image(100,100) %>
  </tr>
</thead>
<table class="table">
<tbody>
  <tr></tr>
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>Introduction</th>
    <th><%= @user.introduction %></th>
  </tr>
  </table>
  
  <div class="row">
    <%= link_to edit_user_path(current_user), class:"btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
  </div>
</tbody>


<%= form_with model: @book, url: books_path,method: :post do |f| %>
 <h2 class="mt-3">New book</h2>
 <div class="form-group">
  <label for="book_title">Title</label>
  <input class="form-control book_title" type="text" name="book[title]" id="book_title">
 </div>
 
 <div class="form-group">
 <label for="book_opinion">Opinion</label>
 <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
 </div>
 
 <div class="form-group">
  <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
 </div>
 <% end %>
 </div>

 <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class='table' >
    <tr>
    <td>
      <%= link_to user_path(@book.user_id) do %>
        <%= image_tag @user.get_profile_image(100,100) %>
         <nav>
           <%= @user.name %>
         </nav>
       <% end %>
    </td>

    <td><%= link_to @book.title %></td>
    <td><%= @book.body %></td>
    <% if @book.user_id == current_user.id %>
    <td><%= link_to"edit", edit_book_path(@book.id),class:"btn-sm btn-success" %></td>
    <td><%= link_to "destroy", book_path(@book.id), class:"btn-sm btn-danger destroy(@book.id)", method: :delete,data: {confirm: "削除しますか？"} %></td>
    <% end %>
    </tr>
    </table>
  </div>
</div>

