<% if @book.errors %>
 <ul>
<% @book.errors.full_messages.each do |message| %>
 <li><%= message %></li>
  <% end %>
 </ul>
<% end %>

<div class= "col-xs-3">
<h2>User info</h2>
<thead>
  <tr>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" ,format: 'no_image.jpg' %>
  </tr>
</thead>
<tbody>
  <tr>
    <th>Name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>Introduction</th>
    <th><%= user.introduction %></th>
  </tr>
  <tr>
      <%= link_to edit_user_path(current_user), class:"btn btn-default btn-block" do %>
      <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
    <% end %>
    </th>
  </tr>
</tbody>

<%= form_for(@book, url: books_path) do |f| %>
 <h2>New book</h2>
 <h4>Title</h4>
 <%= f.text_field :title,class: "col-xs-12" %>
 
 <h4>Opinion</h4>
 <%= f.text_field :body,class: "col-xs-12" %>
 <nav>
   <%= f.submit 'Create Book' ,class: "col-xs-12 btn btn-primary" %>
 </nav>
 <% end %>
</div>


<div class = "col-xs-9">
  <h2>Book detail</h2>
  <table class = 'table' >
    <tr>
      <td>
        <%= link_to use_path(@book.user_id) do %>
         <%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg",size:'50x50',format: 'no_image.jpg' %>
         <nav>
           <%= @book.user.name %>
         </nav>
        <% end %>
      </td>
      
      <td><%= link_to @book.title %></td>
      <td><%= @book.body %></td>
      <% if @book.user_id == current_user.id %>
      <td><%= link_to"edit", edit_book_path(@book.id),class:"btn-sm btn-success" %></td>
      <td><%= link_to "destroy", book_path(@book.id), class:"btn-sm btn-danger destroy(@book.id)", method: :delete,data: {confirm: "本当に消しますか？"} %></td>
    </tr>
  </table>
</div>
</div>